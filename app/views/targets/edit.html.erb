<div class="container">
  <div class="row">
    <div class="target-wrapper col-xs-12 col-md-7">
      <div>
        <p class="col-xs-12">Targetを編集してください</p>
      </div>
      <div>
        <img class="col-xs-12" src="/assets/target.jpg" alt="Target">
      </div>
    </div>
    <div class="target-form col-xs-12 col-md-5">
      <%= form_for @target do |f| %>
        <div>
          <%= f.text_field :name, placeholder: 'Target名', maxlength: '200' %>
        </div>
        <div>
          <%= f.text_area :text, placeholder: 'メモ',  cols: "30", rows: "10" %>
        </div>
        <div>
          <%= f.submit "登録" %>
        </div>
      <% end %>
    </div>
  </div>
</div>