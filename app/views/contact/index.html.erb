<%= form_for @contact, :url => contact_confirm_path do |f| %>
<div class="container">
  <div class="contact-form">
    <div class="contact-title">
      お問い合わせ
    </div>
    <% if @contact.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <strong>入力内容にエラーがあります</strong>
        <ul>
          <% @contact.errors.each do |attr, msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <table class="table">
        <tr>
          <th>名前<span class="text-danger">（必須）</span></th>
          <td><%= f.text_field :name, placeholder: '名前', autofocus: true, maxlength:'20' %></td>
        </tr>
        <tr>
          <th>メールアドレス<span class="text-danger">（必須）</span></th>
          <td><%= f.email_field :email, placeholder: 'メールアドレス' %></td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td><%= f.text_area :message, placeholder: '内容' %></td>
        </tr>
      </table>
      <%= f.submit '確認', class: 'btn' %>
    <% end %>
  </div>
</div>

