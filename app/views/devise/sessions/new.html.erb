<div class="container">
  <div class="col-xs-12 col-md-6 sign-logo">
    <%= render partial: 'common/login_logo' %>
  </div>
  <div class="col-xs-12 col-md-6">
   <div class="sign-form">
     <h2>ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if alert %>
            <p><%= alert %></p>
    <% end %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス' %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: 'パスワード' %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <div class="sign-checkbox">
          <%= f.check_box :remember_me %>
        </div>
        <div class="sign-checkbox-label">
          <%= f.label :remember_me, "ログイン情報を記憶する" %>
        </div>
      </div>
    <% end -%>
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
    <% end %>
      <%= render "devise/shared/links" %>
   </div>
  </div>
</div>

