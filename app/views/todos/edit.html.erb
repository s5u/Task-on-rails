<div class="container">
  <div class="row">
    <div class="col-sm-8 col-md-8 td-dscrptn">
    <div><p>Todoを編集してください</p></div>
      <div><img src="/assets/todo.jpg" alt="Todo"></div>
    </div>
    <div class="col-sm-5 col-md-5 todo-form">
     <%= form_for @todo, :url => {:action => 'update'} do |f| %>
        <div>
          <%= f.text_field :name, placeholder: 'Todo名' %>
        </div>
        <div>
          <%= f.text_area :text, placeholder: 'メモ',  cols: "30", rows: "10" %>
        </div>
        <div>
          <%= f.submit "登録" %>
        </div>
      <% end %>
    </div>
  </div>
</div>