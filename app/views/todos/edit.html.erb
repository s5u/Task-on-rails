<div class="container">
  <div class="row">
    <div class="todo-wrapper col-xs-12 col-md-7">
      <div>
        <p class="col-xs-12">Todoを編集してください</p>
      </div>
      <div>
        <img class="col-xs-12" src="/assets/todo.jpg" alt="Todo">
      </div>
    </div>
    <div class="todo-form col-xs-12 col-md-5">
      <%= form_for @todo, :url => {:action => 'update'} do |f| %>
        <div>
          <%= f.text_field :name, placeholder: 'Todo名', maxlength: '200', autofocus: true %>
        </div>
        <div>
          <%= f.text_area :text, placeholder: 'メモ',  cols: "30", rows: "10" %>
        </div>
        <div>
          <%= f.submit "登録" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
