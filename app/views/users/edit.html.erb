<% provide :title, " | プロフィール編集" %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-7 prof-dscrptn">
      <div><p>プロフィールを<br />入力してください</p></div>
    </div>
    <div class="col-xs-12 col-md-5 prof-form">
       <%= form_for current_user do |f| %>
      <h2>プロフィール画像</h2>
      <div>
        <%= f.file_field :avatar, placeholder: '画像アップロード' %>
      </div>
      <h2>登録情報</h2>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :family_name, placeholder: '姓', maxlength: '10' %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :first_name, placeholder: '名', maxlength: '10' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :family_name_kana, placeholder: 'セイ', maxlength: '10' %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :first_name_kana, placeholder: 'メイ', maxlength: '10' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "登録" %>
      </div>
    <% end %>
    </div>
  </div>
</div>